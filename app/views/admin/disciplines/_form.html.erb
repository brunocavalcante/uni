<%= form_for([:admin, @course, @discipline]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code, nil, :class => :required %><br />
    <%= f.text_field :code, :disabled => (@discipline.id), :class => :input_medium %>
  </p>
  
  <p>
    <%= f.label :name, nil, :class => :required %><br />
    <%= f.text_field :name, :class => :input_xlarge %>
  </p>
  
  <p>
    <%= f.label :credits %><br />
    <%= f.text_field :credits, :class => :input_small %>
  </p>
  
  <p>
    <%= f.label :equivalents %><br />
    <%= f.collection_select :equivalent_ids, @discipline.equivalents.size > 0 ? @discipline.equivalents : [], :id, :name, {}, {:multiple => true} %>
  </p>

  <p>
    <%= f.label :syllabus %><br />
    <%= f.text_area :syllabus %>
  </p>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script language="JavaScript">
  $(document).ready(function() {
    Application.autocomplete('discipline_prerequisite_ids', '<%= disciplines_path %>.js', '<%= t "Remove" %>', true)
    Application.autocomplete('discipline_equivalent_ids',   '<%= disciplines_path %>.js', '<%= t "Remove" %>', true)
  });
</script>
