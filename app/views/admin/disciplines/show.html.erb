<h1><%= @course.name %></h1>
<%= render :partial => 'admin/courses/menu', :locals => { :course => @course } %>
<article>
  <header>
    <h2><%= @discipline.name %></h2>
    <ul id="toolbar">
      <li><%= link_to (t 'Edit'), edit_admin_course_discipline_path(@course, @discipline), :class => 'edit' %></li>
      <li><%= button_to (t 'Delete'), {:action => :show}, :confirm => (t 'AreYouSure'), :method => :delete, :class => 'delete' %></li> 
      <li><%= link_to (t 'Back'), admin_course_disciplines_path, :class => 'back' %></li>
    </ul>
  </header>

  <p>
    <b><%= t 'activerecord.attributes.discipline.code' %>:</b>
    <%= @discipline.code %>
  </p>
  
  <p>
    <b><%= t 'activerecord.attributes.discipline.name' %>:</b>
    <%= @discipline.name %>
  </p>
  
  <p>
    <b><%= t 'activerecord.attributes.discipline.credits' %>:</b>
    <%= @discipline.credits %>
  </p>

  <p>
    <b><%= t 'activerecord.attributes.discipline.version' %>:</b>
    <%= @discipline.version_fullname %>
  </p>
  
  <% if @discipline.syllabus != nil && @discipline.syllabus != '' %>
  <h3><%= t 'activerecord.attributes.discipline.syllabus' %></h3>
  <%= raw @discipline.syllabus %>
  <% end %>

  <% if @discipline.equivalents.size > 0 %>
  <h3><%= t 'activerecord.attributes.discipline.equivalents' %></h3>
  <ul>
    <% @discipline.equivalents.each do |discipline| %>
    <li><%= link_to discipline.name, [:admin, @course, discipline] %></li>
    <% end %>
  </ul>
  <% end %>
  
  <h3><%= t 'Versions' %></h3>
  <ul>
    <% @discipline.versions.each do |discipline| %>
    <li><%= link_to discipline.version_fullname, [:admin, @course, discipline] %></li>
    <% end %>
  </ul>

</article>
