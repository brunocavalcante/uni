- content_for :title do 
  %h1= @course.name
  
= render :partial => 'admin/courses/menu', :locals => { :course => @course }

%article.content
  %header.page-header
    %h2= @curriculum.name + ':' + @curriculum_module.name
    %ul#toolbar
      %li= link_to (t 'Back'), {:action => :index}, :class => 'back'
      - if !@curriculum.active
        %li= link_to (t 'Edit'), {:action => :edit}, :class => 'edit'
        %li= button_to (t 'Remove'), {:action => "show"}, :confirm => (t 'AreYouSure'), :method => :delete, :class => 'delete'
        
  %p
    %strong=(t 'activerecord.attributes.curriculum_module.name') + ':'
    = @curriculum_module.name
    
  %p
    %strong=(t 'activerecord.attributes.curriculum_module.order') + ':'
    = @curriculum_module.order