%table
  %thead
    %tr
      %th= t 'ClassCode'
      %th= t 'activerecord.attributes.lecture.discipline_id' 
      %th= t 'activerecord.attributes.discipline.course_id' 
  %tbody
    - @lectures.each do |lecture|
      %tr
        %td= lecture.code 
        %td= link_to lecture.discipline.name, admin_academic_period_lecture_path(@academic_period, lecture) 
        %td= link_to lecture.discipline.course.name, admin_course_path(lecture.discipline.course) 
