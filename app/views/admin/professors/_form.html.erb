<%= form_for([:admin, @professor]) do |f| %>
  <%= f.error_messages %>

  <%= f.fields_for :person do |p| %>
  <p>
    <%= p.label :name, nil, :class => :required %><br />
    <%= p.text_field :name, :class => :input_xlarge %>
  </p>
  <p>
    <%= p.label :email, nil, :class => :required %><br />
    <%= p.text_field :email, :class => :input_xlarge %>
  </p>
  <p>
    <%= p.label :scholarity_id %><br />
    <%= p.select :scholarity_id, Scholarity.all.collect {|it| [it.name, it.id]}, :include_blank => true %>
  </p>
  <p>
    <%= p.label :date_birth %><br />
    <%= p.date_select :date_birth, :start_year => 1900, :end_year => Time.now.year, :include_blank => true %>
  </p>
  
  <% end %>
  
  <p>
    <%= f.check_box :active %> <%= f.label :active %><br />
  </p>
  
  <p>
    <%= label_tag (t 'ResetPassword') %>  
    <%= check_box_tag :reset_password %><br />
    <small><%= t 'PasswordWillBeTheProfessorEmail' %></small>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
