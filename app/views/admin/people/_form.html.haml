.clearfix
  = p.label :name, nil, :class => :required
  .input
    = p.text_field :name, :class => :input_xlarge

.clearfix
  = p.label :email, nil, :class => :required
  .input
    = p.text_field :email, :class => :input_xlarge

.clearfix
  = p.label :scholarity_id
  .input
    = p.select :scholarity_id, Scholarity.all.collect {|it| [it.name, it.id]}, :include_blank => true

.clearfix
  = p.label :date_birth
  .input
    = p.date_select :date_birth, :start_year => 1900, :end_year => Time.now.year, :include_blank => true

- for partialUrl in UniBroker.instance.personFormPartialUrls
  = render :partial => partialUrl, :locals => {:p => p}