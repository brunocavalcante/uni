<h1><%= t 'Parameters' %></h1>
<%= render :partial => 'admin/parameters/menu' %>
<article class="content">
  <header class="page-header">
    <h2><%= t 'activerecord.models.course_category' %></h2>
    <ul id="toolbar">
      <li><%= link_to (t 'Back'), {:action => 'index'}, :class => 'back' %></li>
      <li><%= link_to (t 'Edit'), {:action => 'edit', :id => @course_category.id}, :class => 'edit' %></li>
      <li><%= button_to (t 'Delete'), [:admin, @course_category], :confirm => 'Tem certeza disso?', :method => :delete, :class => 'delete' %></li> 
    </ul>
  </header>

  <p>
    <b><%= t 'activerecord.attributes.course_category.name' %>:</b>
    <%= @course_category.name %>
  </p>
</article>