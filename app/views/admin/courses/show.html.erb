<% content_for :title do %><h1><%= @course.name %></h1><% end %>
<%= render :partial => 'menu', :locals => { :course => @course } %>
<article class="content">
  <header class="page-header">
    <h2><%= t 'Start' %></h2>
    <ul id="toolbar">
      <li><%= link_to (t 'Back'), admin_courses_path, :class => 'back' %></li>
      <li><%= link_to (t 'Edit'), edit_admin_course_path(@course), :class => 'edit' %></li>
      <li><%= button_to (t 'Delete'), [:admin, @course], :confirm => (t 'AreYouSure'), :method => :delete, :class => 'delete' %></li> 
    </ul>
  </header>
  
  <p>
    <b><%= t 'activerecord.attributes.course.code' %>:</b>
    <%= @course.code %>
  </p>

  <p>
    <b><%= t 'activerecord.attributes.course.name' %>:</b>
    <%= @course.name %>
  </p>
  
  <p>
    <b><%= t 'activerecord.attributes.course.course_category_id' %>:</b>
    <%= @course.course_category.name if @course.course_category %>
  </p>
</article>
