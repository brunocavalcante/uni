- content_for :title do
  %h1= @lecture.name
  
= render :partial => 'student/lectures/menu'

%article.content
  %header.page-header
    %h2= t 'Lessons'
    
  - if @lessons
    %table
      %thead
        %tr
          %th= t 'activerecord.attributes.lesson.title'
          %th= t 'activerecord.attributes.lesson.date'
      %tbody
        - for lesson in @lessons
          %tr
            %td= link_to lesson.name, [:student, @lecture, lesson]
            %td= l lesson.date, :format => :long
    
    = will_paginate @lessons
