<%= form_for([:professor, @lecture, @lesson]) do |f| %>
  <%= f.error_messages %>

	<div class="clearfix">
		<%= f.label :date %>
		<div class="input">
			<%= f.datetime_select :date, {}, {:class => :span2} %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= f.label :title %>
		<div class="input">
			<%= f.text_field :title %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= f.label :description %>
		<div class="input">
			<%= f.text_area :description, :rows => 10, :class => :span9 %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= f.label :maximum_absences %>
		<div class="input">
			<%= f.text_field :maximum_absences, :value => @lesson.maximum_absences ? @lesson.maximum_absences : 0 %>
			<span class="help-block"><%= t 'MaximumAbsencesExplanation' %></span>
		</div>
	</div>

  <div class="actions">
    <%= f.submit nil, :class => 'btn primary' %>
  </div>
<% end %>
