- content_for :title do
  %h1= @lecture.name
  
= render :partial => 'professor/lectures/menu'

%article.content
  %header.page-header
    %h2= @test.name
    %ul#toolbar
      %li= link_to (t 'Back'), professor_lecture_tests_path(@lecture), :class => 'back'
      %li= link_to (t 'Edit'), edit_professor_lecture_test_path(@lecture, @test), :class => 'edit'
      %li= link_to (t 'Test_Results'), professor_lecture_test_test_results_path(@lecture, @test), :class => 'absences'
      %li= button_to (t 'Delete'), [:professor, @lecture, @test], :confirm => (t 'AreYouSure'), :method => :delete, :class => 'delete'

  %p
    %strong= (t 'activerecord.attributes.test.name') + ': ' 
    = @test.name
  
  %p
    %strong= (t 'activerecord.attributes.test.date') + ': ' 
    = l @test.date, :format => :long if @test.date
